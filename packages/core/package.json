{
  "name": "bobecs",
  "version": "0.2.0",
  "description": "Entity Component System library",
  "main": "src/bobecs.js",
  "scripts": {
    "exemple": "browserify exemple/es6/basic.js -t [ babelify ] | uglifyjs -c -o exemple/dist/basic.js",
    "dev": "watch 'yarn run exemples' src/ exemples/es6/",
    "clean": "rm -rf node_modules lib exemples/dist/*.js",
    "test": "yarn run cs && yarn run tu",
    "cs": "eslint -c ../../.eslintrc.js src/*.js",
    "tu": "mocha --compilers js:babel-core/register",
    "doc": "jsdoc src/*.js -d ./docs/ README.md"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-preset-env": "1.7.0",
    "babelify": "8.0.0",
    "browserify": "16.2.0",
    "chai": "4.1.2",
    "eslint": "5.5.0",
    "jsdoc": "3.5.5",
    "mocha": "5.2.0",
    "sinon": "6.3.3",
    "sinon-chai": "3.2.0",
    "stats.js": "0.17.0",
    "uglify-js": "3.4.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/desaintvincent/bobecs.git"
  },
  "author": "desaintvincent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/desaintvincent/bobecs/issues"
  },
  "homepage": "https://github.com/desaintvincent/bobecs/#readme"
}
